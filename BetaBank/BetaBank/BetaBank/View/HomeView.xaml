<UserControl x:Class="BetaBank.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BetaBank.View"
             xmlns:controls="clr-namespace:BetaBank.View.Controls"
             Background="Silver"
             mc:Ignorable="d"
             d:DesignHeight="750"
             d:DesignWidth="1200"
             MinHeight="750"
             MinWidth="1200">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:NavigationBar />

        <Grid Grid.Row="1"
              Grid.Column="0"
              HorizontalAlignment="Center"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="675" />
            </Grid.RowDefinitions>

            <!-- Welcome Message -->
            <TextBlock Text="{Binding Welcome}"
                       Grid.Row="0"
                       Grid.Column="0"
                       Margin="0,0,0,0"
                       TextWrapping="Wrap"
                       Width="800"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="32">
            </TextBlock>

            <Grid Grid.Row="1"
                  Grid.Column="0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="300" />
                    <RowDefinition Height="300" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Orientation="Vertical"
                            Margin="0,100,0,0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center">
                    <TextBlock Text="May we present your account balance?"
                               Margin="0,0,0,0"
                               TextWrapping="Wrap"
                               Width="600"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="24">
                    </TextBlock>

                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <Button x:Name="Yes"
                                Grid.Column="0"
                                Command="{Binding Yes}"
                                Margin="0,20,40,20"
                                Width="100"
                                Height="32"
                                Content="You may"
                                FontSize="16"
                                HorizontalAlignment="Center"
                                Background="{StaticResource BetaBankLight}"
                                Foreground="White" />

                        <Button x:Name="No"
                                Grid.Column="0"
                                Command="{Binding No}"
                                Margin="40,20,0,20"
                                Width="100"
                                Height="32"
                                Content="Certainly not"
                                FontSize="16"
                                HorizontalAlignment="Center"
                                Background="{StaticResource BetaBankLight}"
                                Foreground="White" />
                    </StackPanel>

                    <TextBlock Text="{Binding BalanceAmount}"
                               Margin="0,0,0,0"
                               TextWrapping="Wrap"
                               Width="600"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="24"
                               Foreground="{Binding BalanceColor}">
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="1"
                            Grid.Column="0"
                            Orientation="Vertical"
                            Margin="0,40,0,0">

                    <TextBlock Text="Do you wish to withdraw funds today?"
                               Margin="0,0,0,0"
                               TextWrapping="Wrap"
                               Width="600"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="24">
                    </TextBlock>

                    <TextBlock Text="Amount"
                               Margin="0,20,0,0"
                               TextWrapping="Wrap"
                               Width="600"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16">
                    </TextBlock>

                    <TextBox x:Name="AmountTextbox"
                             Grid.Row="1"
                             Grid.Column="0"
                             Text="{Binding WithdrawAmount}"
                             Margin="0,10,0,10"
                             Width="300"
                             Height="24"
                             FontSize="16"
                             MaxLength="24"
                             HorizontalAlignment="Center">
                    </TextBox>

                    <Button x:Name="Withdraw"
                            Grid.Column="0"
                            Command="{Binding Withdraw}"
                            Margin="0,20,0,0"
                            Width="100"
                            Height="32"
                            Content="Withdraw"    
                            FontSize="16"
                            HorizontalAlignment="Center"
                            Background="{StaticResource BetaBankLight}"
                            Foreground="White"
                            IsEnabled="False"/>

                    <TextBlock Text="{Binding RemainingBalance}"
                               Margin="0,20,0,0"
                               TextWrapping="Wrap"
                               Width="600"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="{Binding RemainingBalanceColor}">
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>